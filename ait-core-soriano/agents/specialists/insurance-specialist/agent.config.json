    "rateLimit": {
      "requests": 100,
      "period": "1m"
    }
  },
  "monitoring": {
    "metrics": [
      "requests_total",
      "requests_duration_seconds",
      "tokens_used_total",
      "errors_total"
    ],
    "logging": {
      "level": "info",
      "includePrompts": false,
      "includeResponses": true
    }
