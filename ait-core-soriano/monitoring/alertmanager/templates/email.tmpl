{{ define "email.default.html" }}
<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <style>
    body {
      font-family: Arial, sans-serif;
      line-height: 1.6;
      color: #333;
      max-width: 800px;
      margin: 0 auto;
      padding: 20px;
    }
    .header {
      background: #f44336;
      color: white;
      padding: 20px;
      border-radius: 5px 5px 0 0;
    }
    .header.warning {
      background: #ff9800;
    }
    .header.resolved {
      background: #4caf50;
    }
    .content {
      border: 1px solid #ddd;
      border-top: none;
      padding: 20px;
      background: #f9f9f9;
    }
    .alert {
      background: white;
      padding: 15px;
      margin: 10px 0;
      border-left: 4px solid #f44336;
      border-radius: 4px;
    }
    .alert.warning {
      border-left-color: #ff9800;
    }
    .alert.resolved {
      border-left-color: #4caf50;
    }
    .label {
      display: inline-block;
      padding: 3px 8px;
      background: #e0e0e0;
      border-radius: 3px;
      font-size: 12px;
      margin: 2px;
    }
    .annotation {
      margin: 10px 0;
    }
    .footer {
      margin-top: 20px;
      padding: 20px;
      background: #f5f5f5;
      border-radius: 0 0 5px 5px;
      text-align: center;
      font-size: 12px;
      color: #666;
    }
    a {
      color: #2196f3;
      text-decoration: none;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin: 10px 0;
    }
    th, td {
      text-align: left;
      padding: 8px;
      border-bottom: 1px solid #ddd;
    }
    th {
      background: #f0f0f0;
      font-weight: bold;
    }
  </style>
</head>
<body>
  <div class="header {{ if eq .Status "resolved" }}resolved{{ else if eq .CommonLabels.severity "warning" }}warning{{ end }}">
    <h2>
      {{ if eq .Status "resolved" }}
        ‚úì RESOLVED
      {{ else if eq .CommonLabels.severity "critical" }}
        üî• CRITICAL ALERT
      {{ else if eq .CommonLabels.severity "warning" }}
        ‚ö†Ô∏è WARNING
      {{ else }}
        ‚ÑπÔ∏è ALERT
      {{ end }}
    </h2>
    <h3>{{ .GroupLabels.alertname }}</h3>
  </div>

  <div class="content">
    <p><strong>Status:</strong> {{ .Status | toUpper }}</p>
    <p><strong>Number of Alerts:</strong> {{ len .Alerts }}</p>
    <p><strong>Group Labels:</strong></p>
    <div>
      {{ range .GroupLabels.SortedPairs }}
        <span class="label">{{ .Name }}: {{ .Value }}</span>
      {{ end }}
    </div>

    <h3>Firing Alerts:</h3>
    {{ range .Alerts.Firing }}
    <div class="alert {{ .Labels.severity }}">
      <h4>{{ .Labels.alertname }}</h4>

      <div class="annotation">
        <strong>Summary:</strong> {{ .Annotations.summary }}
      </div>

      <div class="annotation">
        <strong>Description:</strong> {{ .Annotations.description }}
      </div>

      {{ if .Annotations.runbook }}
      <div class="annotation">
        <strong>Runbook:</strong> <a href="{{ .Annotations.runbook }}">{{ .Annotations.runbook }}</a>
      </div>
      {{ end }}

      <table>
        <tr>
          <th>Label</th>
          <th>Value</th>
        </tr>
        {{ range .Labels.SortedPairs }}
        <tr>
          <td>{{ .Name }}</td>
          <td>{{ .Value }}</td>
        </tr>
        {{ end }}
      </table>

      <p><strong>Started:</strong> {{ .StartsAt.Format "2006-01-02 15:04:05 MST" }}</p>
    </div>
    {{ end }}

    {{ if .Alerts.Resolved }}
    <h3>Resolved Alerts:</h3>
    {{ range .Alerts.Resolved }}
    <div class="alert resolved">
      <h4>{{ .Labels.alertname }}</h4>

      <div class="annotation">
        <strong>Summary:</strong> {{ .Annotations.summary }}
      </div>

      <p><strong>Started:</strong> {{ .StartsAt.Format "2006-01-02 15:04:05 MST" }}</p>
      <p><strong>Resolved:</strong> {{ .EndsAt.Format "2006-01-02 15:04:05 MST" }}</p>
      <p><strong>Duration:</strong> {{ .EndsAt.Sub .StartsAt }}</p>
    </div>
    {{ end }}
    {{ end }}
  </div>

  <div class="footer">
    <p>AIT-CORE Monitoring System</p>
    <p>
      <a href="{{ .ExternalURL }}">View in Alertmanager</a> |
      <a href="{{ .ExternalURL }}/#/silences/new?filter=%7B">Create Silence</a>
    </p>
  </div>
</body>
</html>
{{ end }}
