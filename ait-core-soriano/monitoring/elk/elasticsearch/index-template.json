{
  "index_patterns": ["logs-*"],
  "template": {
    "settings": {
      "number_of_shards": 3,
      "number_of_replicas": 1,
      "index.lifecycle.name": "ait-core-logs-policy",
      "index.lifecycle.rollover_alias": "logs",
      "refresh_interval": "30s",
      "codec": "best_compression",
      "analysis": {
        "analyzer": {
          "default": {
            "type": "standard",
            "stopwords": "_english_"
          }
        }
      }
    },
    "mappings": {
      "dynamic": true,
      "dynamic_templates": [
        {
          "strings_as_keywords": {
            "match_mapping_type": "string",
            "mapping": {
              "type": "keyword",
              "ignore_above": 256,
              "fields": {
                "text": {
                  "type": "text"
                }
              }
            }
          }
        }
      ],
      "properties": {
        "@timestamp": {
          "type": "date"
        },
        "level": {
          "type": "keyword"
        },
        "message": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          }
        },
        "service": {
          "type": "keyword"
        },
        "application": {
          "type": "keyword"
        },
        "container_name": {
          "type": "keyword"
        },
        "host": {
          "type": "keyword"
        },
        "clientip": {
          "type": "ip"
        },
        "status": {
          "type": "integer"
        },
        "method": {
          "type": "keyword"
        },
        "request": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          }
        },
        "useragent": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          }
        },
        "geoip": {
          "properties": {
            "location": {
              "type": "geo_point"
            },
            "country_name": {
              "type": "keyword"
            },
            "city_name": {
              "type": "keyword"
            }
          }
        },
        "user_agent": {
          "properties": {
            "name": {
              "type": "keyword"
            },
            "os": {
              "type": "keyword"
            },
            "device": {
              "type": "keyword"
            }
          }
        },
        "trace_id": {
          "type": "keyword"
        },
        "span_id": {
          "type": "keyword"
        },
        "error": {
          "properties": {
            "message": {
              "type": "text"
            },
            "stack_trace": {
              "type": "text"
            },
            "type": {
              "type": "keyword"
            }
          }
        }
      }
    }
  },
  "version": 1,
  "_meta": {
    "description": "AIT-CORE application logs template"
  }
}
