# Monitoring Stack Environment Variables

# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change-this-password

# Prometheus
# No specific credentials needed for basic setup

# Alertmanager - Email
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Alertmanager - Slack
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Alertmanager - PagerDuty
PAGERDUTY_SERVICE_KEY=your-pagerduty-service-key
PAGERDUTY_SLO_KEY=your-pagerduty-slo-key
PAGERDUTY_SECURITY_KEY=your-pagerduty-security-key

# Elasticsearch
ELASTIC_PASSWORD=change-this-elastic-password

# Kibana
KIBANA_PASSWORD=change-this-kibana-password
KIBANA_ENCRYPTION_KEY=change-this-32-character-key-min
KIBANA_REPORTING_ENCRYPTION_KEY=change-this-32-character-key-min
KIBANA_SAVED_OBJECTS_ENCRYPTION_KEY=change-this-32-character-key-min

# PostgreSQL (for Grafana datasource)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_DB=ait_core
POSTGRES_GRAFANA_PASSWORD=grafana-reader-password

# Redis
REDIS_PASSWORD=your-redis-password

# InfluxDB (if used)
INFLUXDB_TOKEN=your-influxdb-token

# Sentry
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEXT_PUBLIC_SENTRY_DSN=https://your-public-sentry-dsn@sentry.io/project-id
SENTRY_AUTH_TOKEN=your-sentry-auth-token
SENTRY_ORG=your-org
SENTRY_PROJECT=your-project
SENTRY_SECRET_KEY=your-sentry-secret-key-min-32-chars
SENTRY_DB_PASSWORD=your-sentry-db-password

# Application
APP_NAME=ait-core
APP_VERSION=1.0.0
NEXT_PUBLIC_APP_VERSION=1.0.0
NODE_ENV=production
NEXT_PUBLIC_ENVIRONMENT=production

# Slack (for Sentry)
SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret
SLACK_VERIFICATION_TOKEN=your-slack-verification-token

# GitHub (for Sentry)
GITHUB_APP_ID=your-github-app-id
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_WEBHOOK_SECRET=your-github-webhook-secret
GITHUB_PRIVATE_KEY=your-github-private-key
