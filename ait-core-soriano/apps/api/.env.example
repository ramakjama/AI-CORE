# ============================================================================
# AIT-CORE API ENVIRONMENT CONFIGURATION
# ============================================================================

# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api

# Security
COOKIE_SECRET=change-this-secret-in-production
REQUEST_TIMEOUT=30000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/ait_core?schema=public

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Bcrypt
BCRYPT_ROUNDS=10

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Swagger
SWAGGER_ENABLED=true
SWAGGER_TITLE=AIT-CORE API
SWAGGER_DESCRIPTION=Enterprise API for AIT-CORE Platform
SWAGGER_VERSION=1.0
SWAGGER_PATH=docs

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_QUEUE_DB=1
REDIS_TTL=300
REDIS_MAX_ITEMS=1000

# Kafka
KAFKA_ENABLED=false
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=ait-core-api
KAFKA_GROUP_ID=ait-core-group
KAFKA_SASL_ENABLED=false
KAFKA_SASL_MECHANISM=plain
KAFKA_SASL_USERNAME=
KAFKA_SASL_PASSWORD=

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Email
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-password
SMTP_FROM=noreply@ait-core.com
SMTP_FROM_NAME=AIT-CORE

# SMS (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# AWS S3 (for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_S3_REGION=us-east-1

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# External APIs
WEATHER_API_KEY=
GEOCODING_API_KEY=

# Feature Flags
ENABLE_WEBSOCKETS=true
ENABLE_KAFKA=false
ENABLE_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
