{
  "name": "@ait-core/crm",
  "version": "1.0.0",
  "description": "CRM completo con Lead Management, Sales Pipeline, Activity Tracking y Email Campaigns",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "lint": "eslint \"{src,test}/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\""
  },
  "dependencies": {
    "@nestjs/common": "^10.3.0",
    "@nestjs/core": "^10.3.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/swagger": "^7.2.0",
    "@nestjs/platform-express": "^10.3.0",
    "@prisma/client": "^5.8.0",
    "class-validator": "^0.14.1",
    "class-transformer": "^0.5.1",
    "resend": "^3.0.0",
    "handlebars": "^4.7.8",
    "xlsx": "^0.18.5",
    "express": "^4.18.2",
    "winston": "^3.11.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.0",
    "@nestjs/testing": "^10.3.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "prisma": "^5.8.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "jest": {
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,ts}",
      "!src/**/*.spec.ts",
      "!src/**/*.interface.ts",
      "!src/**/index.ts"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 85,
        "lines": 85,
        "statements": 85
      }
    }
  },
  "keywords": [
    "crm",
    "lead-management",
    "sales-pipeline",
    "email-campaigns",
    "analytics",
    "nestjs",
    "typescript"
  ],
  "author": "AIT Core Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ait-core/crm"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
