{
  "name": "@ait-core/nerve",
  "version": "1.0.0",
  "description": "AIT-NERVE - Motor Manager & Engine Orchestration System",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "deploy": "bash scripts/deploy.sh production docker",
    "deploy:k8s": "bash scripts/deploy.sh production kubernetes",
    "health-check": "bash scripts/health-check.sh http://localhost:3000",
    "docker:build": "docker build -t ait-nerve:latest .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f ait-nerve"
  },
  "keywords": [
    "engine-orchestration",
    "motor-manager",
    "microservices",
    "load-balancing",
    "health-monitoring"
  ],
  "dependencies": {
    "@nestjs/common": "^10.3.0",
    "@nestjs/core": "^10.3.0",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/swagger": "^7.1.17",
    "@nestjs/microservices": "^10.3.0",
    "@nestjs/schedule": "^4.0.0",
    "@nestjs/bull": "^10.0.1",
    "bull": "^4.12.0",
    "axios": "^1.6.5",
    "redis": "^4.6.12",
    "rxjs": "^7.8.1",
    "class-validator": "^0.14.1",
    "class-transformer": "^0.5.1",
    "reflect-metadata": "^0.2.1",
    "prom-client": "^15.1.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/bull": "^4.10.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "author": "AIT-CORE Team",
  "license": "PROPRIETARY"
}
