# AIT-NERVE Environment Configuration
# PRODUCTION-READY Configuration Template

# ===========================================
# Application Settings
# ===========================================
NODE_ENV=development
API_PORT=3000
API_PREFIX=/api/v1

# ===========================================
# Engine Service Configuration
# ===========================================
ENGINES_BASE_URL=http://localhost:8000
ENGINES_HEALTH_CHECK_INTERVAL=30000
ENGINES_REQUEST_TIMEOUT=60000
ENGINE_MIN_INSTANCES=1
ENGINE_MAX_INSTANCES=5

# ===========================================
# Redis Configuration (for distributed coordination)
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TLS=false

# ===========================================
# Monitoring & Metrics Configuration
# ===========================================
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics
METRICS_COLLECTION_INTERVAL=60000
PROMETHEUS_ENABLED=true

# ===========================================
# Load Balancing Configuration
# ===========================================
LOAD_BALANCING_STRATEGY=weighted-round-robin
STICKY_SESSION=false
SESSION_TIMEOUT=300000

# ===========================================
# Failover Configuration
# ===========================================
FAILOVER_ENABLED=true
FAILOVER_MAX_RETRIES=3
FAILOVER_RETRY_DELAY=1000
FAILOVER_BACKOFF_MULTIPLIER=2

# ===========================================
# Circuit Breaker Configuration
# ===========================================
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60000

# ===========================================
# Alerting Configuration
# ===========================================
ALERTING_ENABLED=true
ALERT_COOLDOWN_MS=300000
ALERT_RETENTION_DAYS=7

# ===========================================
# Logging Configuration
# ===========================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DIR=./logs
LOG_MAX_FILES=14
LOG_MAX_SIZE=20m

# ===========================================
# API Configuration
# ===========================================
API_PORT=3000
API_PREFIX=/api/v1

# ===========================================
# CORS Configuration
# ===========================================
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:3001

# ===========================================
# WebSocket Configuration
# ===========================================
WEBSOCKET_ENABLED=true
WEBSOCKET_NAMESPACE=/nerve
WEBSOCKET_PORT=3000

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# ===========================================
# Security
# ===========================================
JWT_SECRET=your-secret-key-change-in-production
API_KEY=your-api-key-change-in-production
ENABLE_AUTH=false

# ===========================================
# Auto-Scaling
# ===========================================
AUTO_SCALING_ENABLED=false
SCALE_UP_THRESHOLD=0.8
SCALE_DOWN_THRESHOLD=0.2
SCALE_UP_COOLDOWN=300000
SCALE_DOWN_COOLDOWN=600000

# ===========================================
# Performance Tuning
# ===========================================
MAX_CONCURRENT_REQUESTS=1000
REQUEST_TIMEOUT=120000
QUEUE_SIZE_LIMIT=10000

# ===========================================
# Database (Optional - for persistent storage)
# ===========================================
DATABASE_TYPE=postgres
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=ait_nerve
DATABASE_USER=postgres
DATABASE_PASSWORD=
DATABASE_SSL=false
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# ===========================================
# Notification Channels (Optional)
# ===========================================
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#alerts

EMAIL_ENABLED=false
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_SECURE=false
EMAIL_FROM=alerts@ait-nerve.com
EMAIL_TO=admin@company.com

# ===========================================
# Health Checks
# ===========================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
HEALTH_HISTORY_SIZE=100
