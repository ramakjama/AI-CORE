# Application
NODE_ENV=development
PORT=3020
SERVICE_NAME=ait-communications

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/ait_communications?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Resend (Email)
RESEND_API_KEY=re_your_api_key_here
RESEND_FROM_EMAIL=noreply@sorianomediadores.com
RESEND_FROM_NAME=Soriano Mediadores

# Twilio (SMS & WhatsApp)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+34123456789
TWILIO_WHATSAPP_NUMBER=whatsapp:+34123456789

# Rate Limiting
EMAIL_RATE_LIMIT_PER_HOUR=100
SMS_RATE_LIMIT_PER_HOUR=50
WHATSAPP_RATE_LIMIT_PER_HOUR=50

# Features
ENABLE_EMAIL=true
ENABLE_SMS=true
ENABLE_WHATSAPP=true
ENABLE_TRACKING=true
ENABLE_ANALYTICS=true

# URLs
APP_URL=https://sorianomediadores.com
UNSUBSCRIBE_URL=https://sorianomediadores.com/unsubscribe
TRACKING_PIXEL_URL=https://sorianomediadores.com/track

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Logging
LOG_LEVEL=info
