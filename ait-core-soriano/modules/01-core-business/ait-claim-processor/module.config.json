{
  "module": {
    "id": "ait-claim-processor",
    "name": "Claim Processor",
    "version": "1.0.0",
    "category": "core-business",
    "priority": "P0",
    "status": "active"
  },
  "connector": {
    "type": "nestjs-module",
    "autoLoad": true,
    "provides": ["ClaimService", "ClaimWorkflowService"],
    "api": {
      "prefix": "/api/v1/claims",
      "endpoints": [
        "POST /",
        "GET /",
        "GET /:id",
        "PUT /:id",
        "POST /:id/approve",
        "POST /:id/reject",
        "POST /:id/pay",
        "POST /:id/reopen",
        "GET /:id/timeline",
        "POST /:id/documents"
      ]
    }
  },
  "capabilities": {
    "domain": "Gestión de Siniestros",
    "features": [
      "Registro de siniestros FNOL",
      "Workflow automatizado (reportar → investigar → aprobar → pagar)",
      "Validación de cobertura automática",
      "Cálculo de indemnización",
      "Detección de fraude con AI",
      "Gestión de documentos (fotos, facturas, informes)",
      "Timeline completo del siniestro",
      "SLA tracking y alertas",
      "Integración con insurance-specialist AI",
      "Subrogación y recuperación"
    ]
  }
}
