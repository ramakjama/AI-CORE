# ============================================
# AI-ACCOUNTANT Environment Variables
# ============================================

# Node Environment
NODE_ENV=development
PORT=3003

# Database (PostgreSQL)
DATABASE_URL=postgresql://aitcore:aitcore2024@localhost:5432/accounting_db

# AI-PGC-ENGINE Integration
PGC_ENGINE_URL=http://ai-pgc-engine:3001
PGC_ENGINE_API_KEY=your-pgc-engine-api-key

# JWT Secret (for auth)
JWT_SECRET=your-jwt-secret-here

# Logging
LOG_LEVEL=debug

# Features Flags
ENABLE_AI_CLASSIFICATION=true
ENABLE_AUTO_RECONCILIATION=true
ENABLE_ANOMALY_DETECTION=true

# ML Models
ML_MODEL_PATH=/models
ML_CONFIDENCE_THRESHOLD=0.7

# Kafka (Event Bus)
KAFKA_BROKERS=kafka:9092
KAFKA_CLIENT_ID=ai-accountant
KAFKA_GROUP_ID=ai-accountant-group

# Redis (Cache)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=2
