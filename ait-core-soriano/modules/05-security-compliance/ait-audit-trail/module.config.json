{
  "module": {
    "id": "ait-audit-trail",
    "name": "Audit Trail",
    "version": "1.0.0",
    "category": "security-compliance",
    "priority": "P0",
    "status": "active"
  },
  "connector": {
    "type": "nestjs-module",
    "autoLoad": true,
    "provides": ["AuditService", "AuditInterceptor"]
  },
  "capabilities": {
    "domain": "Auditoría y Compliance",
    "features": [
      "23 campos de auditoría completos",
      "Registro automático de todos los cambios",
      "Trazabilidad completa (quién, qué, cuándo, dónde)",
      "Almacenamiento en PostgreSQL + Elasticsearch",
      "Eventos Kafka para monitoreo en tiempo real",
      "Retención configurable por tipo de dato",
      "Reportes de auditoría GDPR-compliant",
      "Búsqueda full-text de logs"
    ]
  }
}
