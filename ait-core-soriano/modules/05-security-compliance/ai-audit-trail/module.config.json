{
  "moduleId": "ait-audit-trail",
  "moduleName": "AIT Audit Trail",
  "category": "05-security-compliance",
  "version": "1.0.0",
  "enabled": true,
  "priority": "critical",
  "description": "Comprehensive audit logging system with 23-field tracking for complete operational transparency and compliance",
  "capabilities": [
    "comprehensive-audit-logging",
    "23-field-tracking",
    "user-activity-monitoring",
    "data-change-tracking",
    "api-request-logging",
    "security-event-logging",
    "compliance-reporting",
    "audit-trail-search",
    "audit-trail-export",
    "tamper-proof-logging",
    "log-encryption",
    "log-compression",
    "real-time-alerting",
    "forensic-analysis"
  ],
  "dependencies": {
    "required": [
      "ait-authenticator",
      "ait-datahub"
    ],
    "optional": [
      "ait-compliance-monitor",
      "ai-defender"
    ]
  },
  "resources": {
    "cpu": "high",
    "memory": "1Gi",
    "storage": "10Gi"
  },
  "api": {
    "rest": {
      "enabled": true,
      "basePath": "/api/v1/audit-trail",
      "authentication": "required"
    },
    "graphql": {
      "enabled": false
    },
    "webhooks": {
      "enabled": true,
      "events": [
        "audit.logged",
        "audit.critical",
        "audit.security-violation",
        "audit.compliance-event"
      ]
    }
  },
  "database": {
    "tables": [
      "audit_logs",
      "audit_snapshots",
      "audit_retention_policies",
      "audit_archive"
    ],
    "migrations": true
  },
  "security": {
    "encryption": true,
    "auditLog": false,
    "dataRetention": "10years",
    "compliance": ["SOX", "GDPR", "LOPD", "ISO27001", "SolvenciaII"]
  },
  "monitoring": {
    "healthCheck": true,
    "metrics": true,
    "alerting": true
  }
}
