# Copy this file to .env and fill in the values
# DO NOT commit .env to version control

# ====================================
# POSTGRESQL 17 CONFIGURATION
# ====================================
POSTGRES_USER=aitcore
POSTGRES_PASSWORD=aitcore2024
POSTGRES_DB=soriano_core
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# All databases (40 total) - automatically created by init script
# pgc_engine, accounting_db, treasury_db, auth_db, storage_db, documents_db,
# mail_db, calendar_db, tasks_db, crm_db, analytics_db, hr_db, workflow_db,
# collaboration_db, spreadsheets_db, presentations_db, forms_db, notes_db,
# bookings_db, assistant_db, whiteboard_db, translator_db, embedded_apps_db,
# gateway_db, billing_db, policy_manager_db, claims_processor_db, contracts_db,
# incidents_db, agents_db, clients_db, reports_db, audit_db, notifications_db,
# files_db, chat_db, metrics_db, logs_db

# ====================================
# REDIS 7.4 CONFIGURATION
# ====================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=aitcore2024
REDIS_DB=0

# ====================================
# MINIO (S3-COMPATIBLE STORAGE)
# ====================================
MINIO_ENDPOINT=minio:9000
MINIO_ROOT_USER=aitcore
MINIO_ROOT_PASSWORD=aitcore2024
MINIO_BUCKET=ait-storage
MINIO_REGION=us-east-1
MINIO_SECURE=false

# ====================================
# ELASTICSEARCH 8.11 CONFIGURATION
# ====================================
ELASTICSEARCH_URL=http://elasticsearch:9200
ELASTICSEARCH_INDEX_PREFIX=ait-core
ELASTICSEARCH_SHARDS=1
ELASTICSEARCH_REPLICAS=0

# ====================================
# KAFKA CONFIGURATION
# ====================================
KAFKA_BROKERS=kafka:9092
KAFKA_CLIENT_ID=ait-core
KAFKA_GROUP_ID=ait-core-group
KAFKA_AUTO_OFFSET_RESET=earliest
KAFKA_ENABLE_AUTO_COMMIT=true

# ====================================
# JWT & AUTHENTICATION
# ====================================
JWT_SECRET=ait-super-secret-key-change-this-in-production-2024
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_MIN_LENGTH=8
ENABLE_2FA=false

# ====================================
# API KEYS & SECRETS
# ====================================
# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-opus-20240229

# DeepL Translation
DEEPL_API_KEY=your-deepl-api-key-here

# Google Translate
GOOGLE_TRANSLATE_API_KEY=your-google-translate-api-key-here

# Internal service API keys
PGC_ENGINE_API_KEY=pgc-engine-internal-key-change-this
ACCOUNTANT_API_KEY=accountant-internal-key-change-this

# ====================================
# EMAIL CONFIGURATION (SMTP/IMAP)
# ====================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@aitcore.com
SMTP_FROM_NAME=AIT-CORE System
SMTP_TLS=true
SMTP_SSL=false

IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_USER=your-email@gmail.com
IMAP_PASSWORD=your-app-password
IMAP_SSL=true

# ====================================
# APPLICATION SETTINGS
# ====================================
NODE_ENV=development
LOG_LEVEL=info
DEBUG=false
API_PREFIX=api
TIMEZONE=Europe/Madrid
DEFAULT_LANGUAGE=es
SUPPORTED_LANGUAGES=es,en,fr,de,it,pt

# ====================================
# ELK STACK LOGGING
# ====================================
LOGSTASH_HOST=localhost
LOGSTASH_PORT=5000
LOGSTASH_HTTP_PORT=8080
ELASTICSEARCH_LOGS_URL=http://localhost:9200
KIBANA_URL=http://localhost:5601

# ====================================
# CORS CONFIGURATION
# ====================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,https://www.sorianomediadores.es
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=3600

# ====================================
# RATE LIMITING
# ====================================
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=200
RATE_LIMIT_ENABLED=true

# ====================================
# FILE UPLOAD LIMITS
# ====================================
MAX_FILE_SIZE=104857600
ALLOWED_EXTENSIONS=pdf,doc,docx,xls,xlsx,ppt,pptx,jpg,jpeg,png,gif,zip,rar,txt,csv

# ====================================
# FEATURE FLAGS
# ====================================
ENABLE_AI_CLASSIFICATION=true
ENABLE_AUTO_RECONCILIATION=true
ENABLE_ANOMALY_DETECTION=true
ENABLE_OCR=true
ENABLE_TRANSLATION=true
ENABLE_WEBSOCKETS=true
ENABLE_REAL_TIME_COLLABORATION=true

# ====================================
# ML/AI CONFIGURATION
# ====================================
ML_CONFIDENCE_THRESHOLD=0.7
ML_MODEL_PATH=/app/models
ML_ENABLE_GPU=false
ML_BATCH_SIZE=32
ML_MAX_WORKERS=4

# ====================================
# OCR CONFIGURATION
# ====================================
TESSERACT_LANG=spa+eng
PDF_MAX_PAGES=500
OCR_DPI=300
OCR_PREPROCESSING=true

# ====================================
# BACKUP CONFIGURATION
# ====================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=ait-core-backups
BACKUP_S3_REGION=us-east-1

# ====================================
# MONITORING & METRICS
# ====================================
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_URL=http://grafana:3005
METRICS_ENABLED=true
METRICS_INTERVAL=60
HEALTH_CHECK_INTERVAL=30

# ====================================
# SECURITY SETTINGS
# ====================================
ENABLE_HTTPS=false
SSL_CERT_PATH=/etc/ssl/certs/aitcore.crt
SSL_KEY_PATH=/etc/ssl/private/aitcore.key
ENABLE_HELMET=true
ENABLE_CSRF_PROTECTION=true
COOKIE_SECURE=false
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=lax

# ====================================
# SESSION CONFIGURATION
# ====================================
SESSION_SECRET=session-secret-change-this-in-production
SESSION_MAX_AGE=86400000
SESSION_ROLLING=true
SESSION_RENEW_THRESHOLD=3600000

# ====================================
# EMBEDDED APPS CONFIGURATION
# ====================================
ALLOWED_IFRAME_ORIGINS=*
IFRAME_SANDBOX_ATTRIBUTES=allow-scripts allow-same-origin allow-forms

# ====================================
# CALENDAR & BOOKINGS
# ====================================
DEFAULT_BOOKING_DURATION=30
MAX_BOOKING_ADVANCE_DAYS=90
MIN_BOOKING_NOTICE_HOURS=24
WORKING_HOURS_START=09:00
WORKING_HOURS_END=18:00
WORKING_DAYS=1,2,3,4,5

# ====================================
# COLLABORATION & WEBSOCKETS
# ====================================
WS_PORT=1234
WS_HOST=0.0.0.0
WS_MAX_CONNECTIONS=1000
WS_PING_INTERVAL=30000
WS_TIMEOUT=60000

# ====================================
# DOCUMENT PROCESSING
# ====================================
DOC_MAX_SIZE_MB=100
DOC_PREVIEW_ENABLED=true
DOC_VERSION_CONTROL=true
DOC_AUTO_SAVE_INTERVAL=30

# ====================================
# ANALYTICS & REPORTING
# ====================================
