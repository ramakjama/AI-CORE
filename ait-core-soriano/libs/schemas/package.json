{
  "name": "@ait-core/schemas",
  "version": "1.0.0",
  "description": "Shared Zod schemas for AIT-CORE ecosystem with runtime validation and type inference",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./auth": "./src/auth.ts",
    "./policy": "./src/policy.ts",
    "./claim": "./src/claim.ts",
    "./invoice": "./src/invoice.ts",
    "./customer": "./src/customer.ts",
    "./utils": "./src/utils.ts",
    "./decorators": "./src/decorators/index.ts"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "generate:pydantic": "ts-node scripts/generate-pydantic.ts",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "zod",
    "validation",
    "schema",
    "typescript",
    "runtime-validation",
    "type-inference"
  ],
  "author": "AIN TECH - Soriano Mediadores",
  "license": "PROPRIETARY"
}
