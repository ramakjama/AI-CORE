# âš¡ AIT-NERVE Configuration
# Network Engine Runtime & Vital Executor

# =============================================================================
# ENVIRONMENT
# =============================================================================
NODE_ENV=development # development | production | test

# =============================================================================
# SERVER
# =============================================================================
PORT=3000
HOST=0.0.0.0

# =============================================================================
# DATABASE (PostgreSQL)
# =============================================================================
DATABASE_URL="postgresql://user:password@localhost:5432/ait_nerve?schema=public"

# =============================================================================
# REDIS (Optional - for caching)
# =============================================================================
# REDIS_URL="redis://localhost:6379"

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production-min-32-chars"
JWT_EXPIRY="15m" # 15 minutes

# =============================================================================
# CORS
# =============================================================================
CORS_ORIGINS="http://localhost:3000,http://localhost:3001"

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_MAX=10000 # requests per IP per window
RATE_LIMIT_WINDOW_MS=60000 # 1 minute

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info # debug | info | warn | error
LOG_FILE=logs/ait-nerve.log

# =============================================================================
# PROMETHEUS MONITORING
# =============================================================================
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# =============================================================================
# MONITORING & MAINTENANCE
# =============================================================================
HEALTH_CHECK_INTERVAL=30000 # 30 seconds
METRICS_RETENTION_DAYS=90

# =============================================================================
# SECURITY
# =============================================================================
ENCRYPTION_KEY="your-aes-256-encryption-key-change-this-in-production-32-chars"
BCRYPT_ROUNDS=12

# =============================================================================
# PERFORMANCE
# =============================================================================
CACHE_ENABLED=true
CACHE_TTL=3600 # 1 hour in seconds

# =============================================================================
# FEATURES
# =============================================================================
WEBSOCKET_ENABLED=true
AUDIT_LOG_ENABLED=true
